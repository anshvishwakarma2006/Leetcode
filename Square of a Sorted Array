class Solution {
public:
    vector<int> sortedSquares(vector<int>& nums) {
        int n=nums.size();
        int i=0;
        int j=n-1;
        vector<int>ans(n);
        int k=n-1;
        while(i<=j){
            int l=nums[i]*nums[i];
            int r=nums[j]*nums[j];
            if(l<r){
                ans[k--]=r;
                j--;
            }
            else{
                ans[k--]=l;
                i++;
            }
        }
        return ans;   
        
    }
};
